extends layout

block content
  .pusher
    +sidebar(user)
    .article
      .main.ui.intro.container
        +header(title)
        +breadcrumb([{link: '/', label: 'Главная'}], title)
        br
        button.ui.icon.labeled.button(id='modal')
          i.plus.icon
          | Добавить
          .ui.info.event-modal.modal(data-object='modal')
            .header= 'Новый ремонтный лист лист'
            .content
              form.ui.form(id='form')
                .field
                  label Товар
                  .ui.input
                    select.ui.fluid.dropdown(name='id_manufacturer')
                      option(value='') Выберете товар
                .field
                  label Клиент
                  .ui.input
                    select.ui.fluid.dropdown(name='id_customer')
                        option(value='') Выберете клиента
            .actions
              .ui.deny.black.button Отменить
              .ui.button(onclick="$.post('/products', $('#form').serialize()); location.reload();") Добавить
        br
        br
        table#example.ui.celled.table
          thead
            tr
              th Товар
              th Дата открытия
              th Статус
              th Клиент
              th Действие
          tbody
            each val, index in data
              tr
                td
                  a(href='products/' + val.id_product)= val.name_product
                td= val.date_create
                td
                  a(href='statuses/' + val.id_ststus)= val.name_status
                td
                  a(href='customers/' + val.id_customer)= val.surname_customer + ' ' + val.name_customer
                td
                  a.ui.icon.button(href='sheets/' + val.id_repair_sheet)
                    i.eye.icon
                  button.ui.icon.button(id='modal' + val.id_repair_sheet)
                    i.edit.icon
                  button.ui.icon.button(onclick="$.ajax({ url: '/sheets/" + val.id_repair_sheet + "', type: 'DELETE'});location.reload();")
                    i.trash.icon

