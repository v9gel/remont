extends layout

block content
  .pusher
    +sidebar(user)
    .article
      .main.ui.intro.container
        +header('Кабинет клиента - ' + data.surname + ' ' + data.name)
        .ui.items
          .item
            .image
              img(src='https://source.unsplash.com/random/175x175')
            .content
              a.header= data.surname + ' ' + data.name
              .meta
                span Клиент
              .description
                p= 'Номер телефона: ' + data.phone_number
        h3 Товары
        table#example.ui.celled.table
          thead
            tr
              th Товар
              th Статус
              th Рем. листов
              th Действие
          tbody
            each val, index in table
              tr
                td
                  a(href='/products/' + val.id_product)= val.name_product
                td= val.name_status
                td= val.count_repair_sheets
                td
                  a(href='/products/' + val.id_product)
                    i.eye.icon

